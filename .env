# Modal Armor Environment Configuration

# Google Gemini API Key (REQUIRED)
GEMINI_API_KEY=

# HuggingFace Token (for model access)
HF_TOKEN=

# Modal Armor API Key (for authenticating API requests)
MODAL_ARMOR_API_KEY=

# JWT Secret (for token-based authentication)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long_secret

# Rate Limiting Storage
REDIS_URL=memory://

# Database
DATABASE_URL=sqlite:///data/canary_tokens.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Development
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Security Settings
API_KEY_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
PII_DETECTION_ENABLED=true
HALLUCINATION_DETECTION_ENABLED=true
OUTPUT_SANITIZATION_ENABLED=true
