# =============================================================================
# VeilArmor - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
VEILARMOR_ENV=development
VEILARMOR_DEBUG=false
VEILARMOR_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
VEILARMOR_API_HOST=0.0.0.0
VEILARMOR_API_PORT=8000

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# At least one provider is required for LLM functionality
# -----------------------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Azure OpenAI
AZURE_OPENAI_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Cohere
COHERE_API_KEY=your-cohere-key

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-key-here

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------

# Redis URL (for distributed caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Cache settings
VEILARMOR_CACHE_ENABLED=true
VEILARMOR_CACHE_TTL=3600
VEILARMOR_CACHE_SIMILARITY_THRESHOLD=0.95

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------

# API Authentication
API_KEY=your-secret-api-key-here

# JWT Settings (for Bearer token auth)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# HMAC Settings (for request signing)
HMAC_SECRET=your-hmac-secret-key

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
VEILARMOR_RATE_LIMIT_ENABLED=true
VEILARMOR_RATE_LIMIT_REQUESTS_PER_MINUTE=60
VEILARMOR_RATE_LIMIT_REQUESTS_PER_HOUR=1000

# -----------------------------------------------------------------------------
# Classifier Settings
# -----------------------------------------------------------------------------
VEILARMOR_CLASSIFIER_CONFIDENCE_THRESHOLD=0.7
VEILARMOR_CLASSIFIER_PARALLEL_EXECUTION=true

# -----------------------------------------------------------------------------
# Pipeline Settings
# -----------------------------------------------------------------------------
VEILARMOR_PIPELINE_BLOCK_THRESHOLD=HIGH
VEILARMOR_PIPELINE_SANITIZE_THRESHOLD=MEDIUM
VEILARMOR_PIPELINE_FAIL_OPEN=false

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------

# Prometheus
PROMETHEUS_ENABLED=true

# Sentry (for error tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Webhooks (for security event notifications)
# -----------------------------------------------------------------------------
WEBHOOK_URL=
WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Enable hot reload in development
DEV_RELOAD=true

# Skip certain security checks in development (NOT for production!)
DEV_SKIP_AUTH=false
DEV_SKIP_RATE_LIMIT=false
